{
  "mcpServers": {
    "pmm": {
      "url": "http://localhost:80/v1/mcp/sse"
    },
    "mcp-clickhouse": {
      "command": "uv",
      "args": [
        "run",
        "--with",
        "mcp-clickhouse",
        "--python",
        "3.13",
        "mcp-clickhouse"
      ],
      "env": {
        "CLICKHOUSE_HOST": "localhost",
        "CLICKHOUSE_PORT": "8123",
        "CLICKHOUSE_USER": "default",
        "CLICKHOUSE_PASSWORD": "clickhouse",
        "CLICKHOUSE_SECURE": "false",
        "CLICKHOUSE_VERIFY": "false",
        "CLICKHOUSE_CONNECT_TIMEOUT": "30",
        "CLICKHOUSE_SEND_RECEIVE_TIMEOUT": "30"
      }
    },
    "mcp-victoriametrics": {
      "command": "./bin/mcp-victoriametrics",
      "args": [],
      "env": {
        "VICTORIAMETRICS_URL": "http://localhost:80/prometheus"
      }
    }
  }
} 