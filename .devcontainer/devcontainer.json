// VSCode devcontainer configuration. See
// * CONTRIBUTING.md
// * https://code.visualstudio.com/docs/remote/remote-overview
// * https://code.visualstudio.com/docs/remote/containers
// * https://aka.ms/vscode-remote/devcontainer.json
{
	"dockerComposeFile": "../docker-compose.yml",
	"service": "pmm-managed-server",
	// "/" burns CPU by file indexing
	"workspaceFolder": "/root/go/src/github.com/percona/pmm",
	"name": "pmm-managed",
	"extensions": [
		"bungcip.better-toml",
		"laurenttreguier.rpm-spec",
		"golang.go",
		"streetsidesoftware.code-spell-checker",
		"vscoss.vscode-ansible"
	],
	"settings": {
		"go.useLanguageServer": true,
		"go.inferGopath": true,
		"go.toolsGopath": "/root/go",
		"[go]": {
			"editor.formatOnSave": true,
			"editor.codeActionsOnSave": {
				"source.organizeImports": true,
			},
			// Optional: Disable snippets, as they conflict with completion ranking.
			"editor.snippetSuggestions": "none",
		},
		"[go.mod]": {
			"editor.formatOnSave": true,
			"editor.codeActionsOnSave": {
				"source.organizeImports": true,
			},
		},
		"gopls": {
			// Add parameter placeholders when completing a function.
			"usePlaceholders": true,

			// If true, enable additional analyses with staticcheck.
			// Warning: This will significantly increase memory usage.
			"staticcheck": false,
		},
		"go.alternateTools": {
			// "goimports": "gofumpt"
		},
		"go.buildFlags": [
			"-v"
		],
		"go.testFlags": [
			"-count=1"
		],
		"go.testTimeout": "90s",
		"go.formatTool": "goimports",
		"go.liveErrors": {
			"enabled": true,
			"delay": 500
		},
		// "go.lintOnSave": "workspace",
		"go.lintOnSave": "package",
		"go.lintTool": "golangci-lint",
		"go.lintFlags": [
			"--fast"
		],
		"go.coverOnSingleTest": true,
		"files.eol": "\n" // formatting only supports LF line endings
	},
	"postCreateCommand": ".devcontainer/setup.py"
}
