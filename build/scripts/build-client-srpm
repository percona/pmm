#!/bin/bash

. $(dirname $0)/vars

set -o errexit
set -o xtrace

main() {
    echo -----------------------------------------
    echo "Building PMM Client source RPM files..."
    echo -----------------------------------------

    local IMAGE=${1:-${rpmbuild_docker_image}}
    docker run --rm -v ${bin_dir}:/home/builder/bin -v ${root_dir}/results:/home/builder/results ${IMAGE} sh -c "
        set -o errexit
        set -o xtrace

        export pmm_release=$pmm_release
        mkdir -p /tmp/pmm
        cd /home/builder/results

        /home/builder/bin/build-client-packages \
            --builddir=/tmp/pmm \
            --build_src_rpm=1
    "
}

main $*

# vim: expandtab shiftwidth=4 tabstop=4
