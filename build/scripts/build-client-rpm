#!/bin/bash

. $(dirname $0)/vars

set -o errexit
set -o xtrace

main() {
    echo -----------------------------------------
    echo "Building PMM Client RPM files..."
    echo -----------------------------------------

    local IMAGE=${1:-${rpmbuild_docker_image}}
    docker run --rm \
      -v ${bin_dir}:/home/builder/bin \
      -v ${root_dir}/build:/home/builder/build \
      ${IMAGE} sh -c "
        set -o errexit
        set -o xtrace

        export pmm_version=$pmm_version
        export pmm_release=$pmm_release
        cd /home/builder/build

        /home/builder/bin/build-client-packages --build_rpm=1
      "
}

main $*

# vim: expandtab shiftwidth=4 tabstop=4
