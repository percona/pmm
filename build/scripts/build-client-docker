#!/bin/bash

set -o errexit
set -o xtrace

. $(dirname $0)/vars

main() {
  echo -----------------------------------------
  echo "Building docker image for PMM Client..."
  echo -----------------------------------------

  local DOCKER_CONTEXT_DIR="${bin_dir}/../docker/client"
  cp ${build_dir}/tarball/pmm-client-*.tar.gz ${DOCKER_CONTEXT_DIR}/pmm-client.tar.gz

  if [ -z "${DOCKER_CLIENT_TAG}" ]; then
    DOCKER_CLIENT_TAG="perconalab/pmm-client-fb:${shortcommit}"
  fi

  CLIENT_IMAGE_VERSION=`echo $DOCKER_CLIENT_TAG | cut -d ':' -f2`

  docker buildx build \
    --build-arg BUILD_DATE="`date --rfc-3339=seconds`" \
    --build-arg VERSION="$CLIENT_IMAGE_VERSION" \
    --progress plain \
    -f ${DOCKER_CONTEXT_DIR}/${docker_file} \
    -t ${DOCKER_CLIENT_TAG} \
    ${DOCKER_CONTEXT_DIR}

  if [ -n "${PUSH_DOCKER}" ]; then
    mkdir -p $(dirname ${docker_client_tag_file})
    echo ${DOCKER_CLIENT_TAG} > ${docker_client_tag_file}
    docker push ${DOCKER_CLIENT_TAG}
  fi
}

main

