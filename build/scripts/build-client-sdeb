#!/bin/bash

. $(dirname $0)/vars

set -o errexit
set -o xtrace

bin_dir=$(cd $(dirname $0); pwd -P)

main() {
    local IMAGE=${1:-ubuntu:focal}
    docker run --rm -e DEBIAN_FRONTEND=noninteractive \
                    -v ${bin_dir}:/home/builder/bin \
                    -v ${root_dir}/build:/home/builder/build ${IMAGE} sh -c "
        set -o errexit
        set -o xtrace

        export pmm_release=$pmm_release
        OS_VERSION=\$(cat /etc/os-release | grep VERSION_ID | awk -F'\"' '{print \$2}')

        apt-get update
        DEBIAN_FRONTEND=noninteractive apt-get -y install git lsb-release devscripts dh-make dh-systemd
        cd /home/builder/build

        bash /home/builder/bin/build-client-packages --build_source_deb=1
    "
}

main $*

# vim: expandtab shiftwidth=2 tabstop=2
