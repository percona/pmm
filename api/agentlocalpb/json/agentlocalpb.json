{
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http",
    "https"
  ],
  "swagger": "2.0",
  "info": {
    "title": "PMM Agent Local API",
    "version": "version 1.alpha"
  },
  "paths": {
    "/local/Reload": {
      "post": {
        "tags": [
          "AgentLocal"
        ],
        "summary": "Reload reloads pmm-agent configuration.",
        "operationId": "Reload",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "description": "ReloadRequest may not be received by the client due to pmm-agent restart.",
              "type": "object"
            }
          },
          "default": {
            "description": "An error response.",
            "schema": {
              "description": "ErrorResponse is a message returned on HTTP error.",
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "format": "int32"
                },
                "error": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/local/Status": {
      "post": {
        "tags": [
          "AgentLocal"
        ],
        "summary": "Status returns current pmm-agent status.",
        "operationId": "Status",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "get_logs": {
                  "type": "boolean",
                  "format": "boolean",
                  "title": "TODO https://jira.percona.com/browse/PMM-3758"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "agent_id": {
                  "type": "string"
                },
                "agents_info": {
                  "type": "array",
                  "items": {
                    "description": "AgentInfo contains information about Agent managed by pmm-agent.",
                    "type": "object",
                    "properties": {
                      "agent_id": {
                        "type": "string"
                      },
                      "agent_type": {
                        "description": "Type represents Agent type.\nTODO Replace with inventory.AgentType.",
                        "type": "string",
                        "default": "TYPE_INVALID",
                        "enum": [
                          "TYPE_INVALID",
                          "PMM_AGENT",
                          "NODE_EXPORTER",
                          "MYSQLD_EXPORTER",
                          "MONGODB_EXPORTER",
                          "POSTGRES_EXPORTER",
                          "QAN_MYSQL_PERFSCHEMA_AGENT",
                          "QAN_MYSQL_SLOWLOG_AGENT",
                          "QAN_MONGODB_PROFILER_AGENT",
                          "RDS_EXPORTER"
                        ]
                      },
                      "logs": {
                        "type": "array",
                        "title": "TODO https://jira.percona.com/browse/PMM-3758",
                        "items": {
                          "type": "string"
                        }
                      },
                      "status": {
                        "description": "AgentStatus represents actual Agent status.",
                        "type": "string",
                        "default": "AGENT_STATUS_INVALID",
                        "enum": [
                          "AGENT_STATUS_INVALID",
                          "STARTING",
                          "RUNNING",
                          "WAITING",
                          "STOPPING",
                          "DONE"
                        ]
                      }
                    }
                  }
                },
                "config_file_path": {
                  "description": "Config file path if pmm-agent was started with one.",
                  "type": "string"
                },
                "runs_on_node_id": {
                  "type": "string"
                },
                "server_info": {
                  "description": "ServerInfo contains information about the PMM Server.",
                  "type": "object",
                  "properties": {
                    "connected": {
                      "description": "True if pmm-agent is currently connected to the server.",
                      "type": "boolean",
                      "format": "boolean"
                    },
                    "insecure_tls": {
                      "description": "PMM Server's TLS certificate validation should be skipped if true.",
                      "type": "boolean",
                      "format": "boolean"
                    },
                    "last_ping_time": {
                      "type": "string",
                      "format": "date-time",
                      "title": "TODO https://jira.percona.com/browse/PMM-3758"
                    },
                    "latency": {
                      "type": "string",
                      "title": "TODO https://jira.percona.com/browse/PMM-3758"
                    },
                    "url": {
                      "description": "PMM Server URL in a form https://HOST:PORT/.",
                      "type": "string"
                    },
                    "version": {
                      "description": "PMM Server version; empty if pmm-agent is not connected to the server.",
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "An error response.",
            "schema": {
              "description": "ErrorResponse is a message returned on HTTP error.",
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "format": "int32"
                },
                "error": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}