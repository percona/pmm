{
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http",
    "https"
  ],
  "swagger": "2.0",
  "info": {
    "title": "PMM Agent Local API",
    "version": "version 1.alpha"
  },
  "paths": {
    "/local/Status": {
      "post": {
        "tags": [
          "AgentLocal"
        ],
        "summary": "Status returns current pmm-agent status.",
        "operationId": "Status",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "description": "StatusRequest describes request to get local pmm-agent info.",
              "type": "object",
              "properties": {
                "get_logs": {
                  "type": "boolean",
                  "format": "boolean"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "description": "StatusResponse return information about pmm-agent from local api.",
              "type": "object",
              "properties": {
                "agent_id": {
                  "type": "string"
                },
                "agents_info": {
                  "type": "array",
                  "items": {
                    "description": "AgentInfo returns information about agent which was runned by pmm-agent.",
                    "type": "object",
                    "properties": {
                      "agent_id": {
                        "type": "string"
                      },
                      "agent_type": {
                        "description": "Type represents Agent type.",
                        "type": "string",
                        "default": "TYPE_INVALID",
                        "enum": [
                          "TYPE_INVALID",
                          "NODE_EXPORTER",
                          "MYSQLD_EXPORTER",
                          "MONGODB_EXPORTER",
                          "QAN_MYSQL_PERFSCHEMA_AGENT",
                          "POSTGRES_EXPORTER"
                        ]
                      },
                      "logs": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "status": {
                        "description": "AgentStatus represents actual Agent status.",
                        "type": "string",
                        "default": "AGENT_STATUS_INVALID",
                        "enum": [
                          "AGENT_STATUS_INVALID",
                          "STARTING",
                          "RUNNING",
                          "WAITING",
                          "STOPPING",
                          "DONE"
                        ]
                      }
                    }
                  }
                },
                "runs_on_node_id": {
                  "type": "string"
                },
                "server_info": {
                  "description": "ServerInfo returns information about server which agent was connected.",
                  "type": "object",
                  "properties": {
                    "insecure_tls": {
                      "type": "boolean",
                      "format": "boolean"
                    },
                    "last_ping_time": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "latency": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "An error response.",
            "schema": {
              "description": "ErrorResponse is a message returned on HTTP error.",
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "format": "int32"
                },
                "error": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}