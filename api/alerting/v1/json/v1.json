            "name": "page_size",
            "in": "query"
          },
          {
            "type": "integer",
            "format": "int32",
            "description": "Index of the requested page, starts from 0.",
            "name": "page_index",
            "in": "query"
          },
          {
            "type": "boolean",
            "description": "If true, template files will be re-read from disk.",
            "name": "reload",
            "in": "query"
