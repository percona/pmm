        "custom_labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Custom user-assigned labels.\n\nStatus fields below."
        },
        "connected": {
          "type": "boolean",
          "description": "True if Agent is running and connected to pmm-managed."
